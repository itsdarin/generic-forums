<%= form_tag "/session" do %>
  <div class='gr'><h2>Login</h2></div>
  <div class='gr'>
    <%= label_tag 'name', "Username:" %>
    <%= text_field_tag 'name', nil, :maxlength => 20, :placeholder => 'username', :required => "required" %>
  </div>
  <div class='gr'>
    <%= label_tag 'password', "Password:" %>
    <%= password_field_tag 'password', nil, :placeholder => 'password', :required => "required" %>
  </div>
  <div class='gr'>
    <%= submit_tag "Login" %>
  </div>
<% end -%>
