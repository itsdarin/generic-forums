<li class="post <%= "user_online" if post.user.logged_in? %>" data-post-id="<%= post.id %>" data-thread-id="<%= post.rope.id %>" data-board-id="<%= post.board.id %>">
	<a name="post-<%= post.id %>"></a>
	<div class="user_info">
		<%= render "posts/single_post/user_info", :post => post %>
	</div>
	<div class="post_data">
		<%= format(post) %>
	</div>
	<div class="post_info">
		<%= render "posts/single_post/post_info", :post => post %>
	</div>
</li>
