<ul class='board-list'>
  <li class='header-row'>
    <span class='head size50'>Board Name</span>
    <span class="head size20">Last Post</span>
    <span class="head size20">Active Threads</span>
  </li>
  <% @boards.each do |board| %>
    <% next if board.parent_id or cannot? :read, board %>
    <li class='data-row'>
      <span class="data board-name size50"><%= link_to board.name, board_ropes_path(board) %></span>
      <span class="data basic-data size20 <%= "gray" unless board.posts.first %>"><%= board.posts.first ? board.posts.first.body[0..20] : "no recorded post" %></span>
      <span class="data basic-data size20"><%= board.ropes.size %></span>
    </li>
  <% end -%>
</ul>
